    "@croquet/hybrid-msdf-text": "^1.0.1",
    "jszip": "^3.7.1",
    "load-bmfont": "^1.4.1",
    "pako": "^2.0.4"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^10.2.4",
    "html-webpack-plugin": "^5.5.0",
